{
  "name": "icon-builder",
  "version": "0.0.0",
  "description": "A deterministic, parametric icon generation system for design systems",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel --include-dependencies run dev",
    "dev:ui": "pnpm -C packages/ui dev",
    "build": "pnpm -r --parallel --include-dependencies run build",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "format:check": "pnpm -r run format:check",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "turbo": "^1.11.2",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
